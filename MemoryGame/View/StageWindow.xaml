<Window x:Class="MemoryGame.View.StageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        mc:Ignorable="d"
        Background="#FFB6C1"
        Title="StageWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StagesPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" />
        </ScrollViewer>
    </Grid>
</Window>
